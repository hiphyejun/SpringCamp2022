<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
	<insert id="insert">
		insert into KHJ_mvc (id,email,password) values(#{id},#{email},#{password})
	</insert>
	<update id="update">
		update KHJ_mvc
		set id=#{id}, email=#{email}, password=#{password}
		where id = #{id}
	</update>
	<delete id="delete">
		delete from KHJ_mvc where id=#{id}
	</delete>
	<select id="getUser" resultType="user">
		select * from KHJ_mvc where id=#{id}
	</select>
	<select id="getUsers" resultType="user">
		select * from KHJ_mvc order by id desc
	</select>
</mapper>